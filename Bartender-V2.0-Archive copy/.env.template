# Flask Application Environment Variables
# Copy this file to .env and fill in the values.

# Required: Secret key for Flask session security (must be at least 32 characters)
SECRET_KEY="your-secret-key-at-least-32-characters-long-change-this"

# Required: HTTP Basic Authentication credentials for API endpoints
FLASK_USER="admin"
FLASK_PASSWORD="change-this-password"

# Optional: Flask environment (development/production)
FLASK_ENV="development"

# Optional: Port to run the server (default 5000)
# PORT=5000

# Optional: Debug mode (overridden by FLASK_ENV)
# DEBUG=True

# Scout Caching
# Enable/disable scout result caching (default: enabled)
CACHE_ENABLED=True
# TTL for cached scout outputs in seconds (default: 86400 = 24 hours)
SCOUT_CACHE_TTL_SECONDS=86400
# SQLite database path for cache (default: memory/scout_cache.db)
SCOUT_CACHE_DB_PATH="memory/scout_cache.db"

# Note: The .env file is loaded via python-dotenv. Do not commit .env to version control.