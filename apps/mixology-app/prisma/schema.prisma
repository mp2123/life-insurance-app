// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  favorites Favorite[]
  createdAt DateTime   @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  recipeId  Int?
  recipe    Recipe?  @relation(fields: [recipeId], references: [id])
  videoId   String?  // References the video title or ID
  createdAt DateTime @default(now())
}

model Recipe {
  id           Int        @id @default(autoincrement())
  name         String
  ingredients  String[]
  instructions String
  glassware    String?
  videoUrl     String?
  imageUrl     String?
  category     String?    // e.g., "Classic", "Original", "Mocktail"
  favorites    Favorite[]
  createdAt    DateTime   @default(now())
}

model AffiliateLink {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  url         String
  imageUrl    String?
  category    String?  // e.g., "Shakers", "Glassware", "Books"
  createdAt   DateTime @default(now())
}
